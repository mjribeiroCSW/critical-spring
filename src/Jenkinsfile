pipeline {
    agent any

    stages {
        // checkout de master, based on jenkins configuration
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        // builds the java project
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        // runs the unit tests
        stage('Unit Test') {
            steps {
                sh 'mvn test'
            }

            post {
                always {
                    junit '**/target/surefire-reports/TEST-*.xml'
                }
            }
        }

        // Run integration tests
        stage('Integration Test') {
            steps {
                sh 'mvn verify -Pintegration-test'
            }

            post {
                always {
                    junit '**/target/surefire-reports/TEST-*.xml'
                }
            }
        }

        stage('Publish') {
            steps {
                script {
                    def jarFileName = sh(script: 'ls target/*.jar', returnStdout: true).trim()
                    sh "mvn deploy:deploy-file -Durl=https://jcenter.bintray.com -Dfile=$jarFileName -DgroupId=com.boar.lil.sdk -DartifactId=your-sdk -Dversion=1.0.0 -Dpackaging=jar -Dmethod=webdav"
                }
            }
        }
    }
}